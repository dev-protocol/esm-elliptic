{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	}
}
